<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="../Autoload.php" colors="true">
    <testsuites>
        <testsuite name="Service Hook Test Suite">
            <file>tests/BanyanTest.php</file>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>

    <php>
        <ini name="date.timezone" value="PRC"/>
    </php>
</phpunit>
